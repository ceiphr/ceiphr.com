{
    "arrowParens": "always",
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 80,
    "proseWrap": "always",
    "trailingComma": "none",
    "importOrder": [
        "^(react/(.*)$)|^(react$)|^(next/(.*)$)|^(next$)|path|fs",
        "<THIRD_PARTY_MODULES>",
        "^@components/(.*)$|^@utils/(.*)$|^@contexts/(.*)$|^@types/(.*)$|^@lib/(.*)$|^@styles/(.*)$|^@assets/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
