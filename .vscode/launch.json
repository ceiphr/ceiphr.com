{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web: debug server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run debug",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Web: debug client-side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Web: debug full stack",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run debug",
            "cwd": "${workspaceFolder}",
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },
        {
            "name": "Web: attach",
            "port": 9229,
            "request": "attach",
            "cwd": "${workspaceFolder}",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        }
    ]
}
