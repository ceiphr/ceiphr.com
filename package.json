        "prepare": "husky install",
        "new-post": "bash scripts/new-post.sh",
        "update-dates": "bash scripts/update-dates.sh",
        "update-history": "bash scripts/update-history.sh"
    },
    "lint-staged": {
        "**/*": "prettier --write . --ignore-unknown --ignore-path .gitignore"
    },
    "dependencies": {
