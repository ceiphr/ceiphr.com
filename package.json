        "eslint-plugin-mdx": "^2.1.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "next-remote-watch": "^2.0.0",
        "postcss": "^8.4.23",
        "postcss-import": "^15.1.0",
        "postcss-preset-env": "^8.4.1",
        "prettier": "2.8.8",
        "remark-capitalize": "^1.1.0",
        "remark-math": "^5.1.1",
        "typescript": "^5.0.4",
