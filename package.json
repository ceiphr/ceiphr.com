        "@splinetool/react-spline": "^2.2.6",
        "@vercel/analytics": "^1.0.1",
        "@vercel/kv": "^0.2.1",
        "classnames": "^2.3.2",
        "gray-matter": "^4.0.3",
        "next": "^13.2.4",
        "next-mdx-remote": "^4.4.1",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "rehype-katex": "^6.0.3",
        "tailwindcss": "3.3.2"
